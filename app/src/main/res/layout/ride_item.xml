<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:text="RollerCoaster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rideName"
                    android:textStyle="normal|bold"
                    android:textSize="24sp" />

                <TextView
                    android:text="20 people in queue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/queueLength" />

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/waitingTime"
                    android:textSize="24sp"
                    android:textColor="@color/md_orange_600"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:text="mins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/waitingUnits"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="Ride Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rideDescription"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />

    </LinearLayout>


</android.support.v7.widget.CardView>